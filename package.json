{
  "name": "arcmeter",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @arcmeter/shared build && pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "bash scripts/lint-all.sh",
    "test": "bash scripts/test-all.sh",
    "test:roundtrip": "pnpm --filter @arcmeter/shared test:roundtrip"
  }
}
